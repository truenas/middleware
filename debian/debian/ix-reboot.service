[Unit]
Description=Exec TrueNAS reboot tasks

After=network.target middlewared.service scst.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=true
ExecStop=/usr/local/bin/scst_util.sh stop-alua
StandardOutput=null
StandardError=null
TimeoutStopSec=0

[Install]
WantedBy=multi-user.target
