#!/bin/sh

sb=$1
shift
sbrc=".sb-vars"

set -x
cd $sb
# put all vars from the sb file into the environment
set -a
. "${sbrc}"
set +a
export SB_ROOT=$(realpath .)
#export PATH=$PATH:$(realpath ${SB_BUILD_DIR}/bin)

echo "==========================================="
echo "-->> Now run: build/do_build.sh checkout"
echo "==========================================="

if [ $# -gt 0 ] ; then
	exec "$SHELL" -c "${@}"
else
	exec $SHELL
fi
