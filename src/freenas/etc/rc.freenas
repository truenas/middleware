	local name="${1}"

	local path=$(${FREENAS_SQLITE_CMD} ${FREENAS_CONFIG} "
	SELECT
		jc_path
	FROM
		jails_jailsconfiguration
	ORDER BY
		-id
	LIMIT 1")

	if [ -n "${name}" ]
	then
		path="${path}/${name}"
	fi

	echo "${path}"
	return 0
}

