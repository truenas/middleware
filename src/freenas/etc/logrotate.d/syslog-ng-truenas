/var/log/syslog
{
	rotate 3
	size 10M
	missingok
	notifempty
	delaycompress
	compress
	postrotate
		invoke-rc.d syslog-ng reload > /dev/null
	endscript
}
"/var/log/multus.log" "/var/log/k3s_daemon.log" "/var/log/containerd.log" "/var/log/kube_router.log" {
	rotate 2
	size 5M
	missingok
	notifempty
	delaycompress
	compress
	postrotate
		invoke-rc.d syslog-ng reload > /dev/null
	endscript
}
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
/var/log/daemon.log
/var/log/kern.log
/var/log/auth.log
/var/log/user.log
/var/log/lpr.log
/var/log/cron.log
/var/log/debug
/var/log/messages
/var/log/error
{
	rotate 3
	size 10M
	missingok
	notifempty
	compress
	delaycompress
	sharedscripts
	postrotate
		invoke-rc.d syslog-ng reload > /dev/null
	endscript
