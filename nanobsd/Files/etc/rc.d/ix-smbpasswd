#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: ix-smbpasswd
# REQUIRE: smbd

. /etc/rc.subr

generate_smbpasswd()
{
	local IFS="|"
	local f="ldap_rootbindpw"
	eval local $f
	local sf=$(var_to_sf $f)
	${FREENAS_SQLITE_CMD} ${FREENAS_CONFIG} "
	SELECT
		$sf

	FROM
		services_services,
		services_ldap

	WHERE (
		srv_service = 'ldap' and
		srv_enable = 1
	)

	ORDER BY
		-services_ldap.id

	LIMIT 1 " | \
	while eval read $f
	do
		if [ -n "${ldap_rootbindpw}" ]; then
			/usr/local/bin/smbpasswd -w "${ldap_rootbindpw}" >/dev/null 2>&1
		fi
	done
}

name="ix-smbpasswd"
start_cmd='generate_smbpasswd'
stop_cmd=':'

load_rc_config $name
run_rc_command "$1"
