#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: ix-nsswitch
# REQUIRE: root
# BEFORE: nsswitch

. /etc/rc.freenas

: ${PATH_NS_CONF:="/etc/nsswitch.conf"}


generate_nsswitch_conf()
{
	local ad="${1}"
	local ldap="${2}"
	local nis="${3}"
	local hosts="files dns"
	local conf="${PATH_NS_CONF}"

	local p="compat"
	local g="compat"

	if [ "${ldap}" = "1" -o -n "${ad}" -a "${ad}" != "0" -o "${nis}" = "1" ]
	then
		p="files"
		g="files"

		if [ "${ad}" != "0" ]
		then
			if [ "${ad}" = "2" ]
			then
				p="${p} ldap"
				g="${g} ldap"
			else
				p="${p} winbind"
				g="${g} winbind"
			fi
			hosts="${hosts}"

		elif [ "${ldap}" = "1" ]
		then
			p="${p} ldap"
			g="${g} ldap"

		elif [ "${nis}" = "1" ]
		then
			p="${p} nis"
			g="${g} nis"
			hosts="${hosts} nis"
		fi
	fi
	
	cat <<-__EOF__>"${conf}"
	group: ${g}
	hosts: ${hosts}
	networks: files
	passwd: ${p}
	shells: files
	services: files
	protocols: files
	rpc: files
__EOF__
	
	return 0
}

nsswitch_conf_start()
{
	local ad=0
	local ldap=0
	local nis=0

	if dirsrv_enabled activedirectory
	then
		ad="1"
		if ! dirsrv_enabled nt4
		then
			ad_unix=$(${FREENAS_SQLITE_CMD} ${FREENAS_CONFIG} "
				SELECT
					ad_unix_extensions
				FROM
					services_activedirectory
				ORDER BY
					-id
				LIMIT 1
			")

			if [ "${ad_unix}" = "1" ]; then
				ad="2"
			fi
		fi

	elif dirsrv_enabled nt4
	then
		ad="1"

	elif dirsrv_enabled ldap
	then
		ldap="1"

	elif dirsrv_enabled nis
	then
		nis="1"
	fi

	generate_nsswitch_conf "${ad}" "${ldap}" "${nis}"
}

nsswitch_conf_stop()
{
	generate_nsswitch_conf
}

name="ix-nsswitch"
start_cmd='nsswitch_conf_start'
stop_cmd='nsswitch_conf_stop'

load_rc_config $name
run_rc_command "$1"
