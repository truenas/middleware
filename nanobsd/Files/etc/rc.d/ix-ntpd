#!/bin/sh
#
# $FreeBSD$
#

# PROVIDE: ix-ntpd
# REQUIRE: FILESYSTEMS
# BEFORE: ntpd

. /etc/rc.freenas

generate_ntp_conf()
{
	local IFS="|"
	local f="ntp_address ntp_burst ntp_iburst ntp_prefer ntp_minpoll ntp_maxpoll"
	eval local $f
	local sf=$(var_to_sf $f)

	${FREENAS_SQLITE_CMD} ${FREENAS_CONFIG} "SELECT $sf FROM system_ntpserver ORDER BY id" | \
	while eval read -r $f; do
		echo -n "server ${ntp_address}"
		if [ "${ntp_burst}" = "1" ]; then
			echo -n " burst"
		fi
		if [ "${ntp_iburst}" = "1" ]; then
			echo -n " iburst"
		fi
		if [ "${ntp_perfer}" = "1" ]; then
			echo -n " perfer"
		fi
		if [ -n "${ntp_maxpoll}" ]; then
			echo -n " maxpoll ${ntp_maxpoll}"
		fi
		if [ -n "${ntp_maxpoll}" ]; then
			echo -n " minpoll ${ntp_minpoll}"
		fi
		echo
	done > /etc/ntp.conf

	if [ -s /etc/ntp.conf ]; then
		cat >> /etc/ntp.conf <<EOF
restrict default ignore
restrict 127.0.0.1
restrict -6 ::1

disable bclient
EOF
	fi
}

name="ix-ntpd"
start_cmd='generate_ntp_conf'
stop_cmd=':'

load_rc_config $name
run_rc_command "$1"
